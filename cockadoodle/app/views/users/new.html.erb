<% if @password %>
  <p><%= @password %></p>
<% end %>

<% if @errors %>
  <% @errors.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>



<%= form_for @user do |f| %>
<p>
  <%= f.label :username %>  <br>
  <%= f.text_field :username %>
</p>

<p>
  <%= f.label :password %><br>
  <%= f.text_area :password_hash %>
</p>

<p>
  <%= f.submit 'Submit' %>
</p>
<% end %>

